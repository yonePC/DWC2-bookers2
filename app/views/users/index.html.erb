<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render "books/side", user: current_user, book: @newbook %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h1>Users</h1>
      <table class="table">
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
        </tr>

        <% @users.each do |users| %>
        <tr>
          <td>
            <%= attachment_image_tag @user, :profile_image_id, :fill, 10, 10, format: 'jpg', fallback: "no-image-icon" %>
          </td>
          <td><%= users.name %></td>
          <td><%= link_to 'Show', user_path(users) %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>