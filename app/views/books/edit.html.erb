<div class="container">
  <div class="row">
    <div class="col-8 mx-auto">

      <h1>Editing Book</h1>

      <%= form_with model:@editbook, local: true do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :opinion %>
        <%= f.text_field :body, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.submit class: "btn btn-success" %>
      </div>
      <% end %>

      <div>
        <%= link_to 'Show', book_path(@editbook) %>
        |
        <%= link_to 'Back', books_path %>
      </div>
    </div>
  </div>