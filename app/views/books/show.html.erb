<div class="container">
  <div class="row">
    <div class="col-3">
      <%= render "books/side", user: @book.user, book: @newbook %>
    </div>

    <div class="col-8">
      <h1>Book detail</h1>
      <table class="table">
        <!--<tr>-->
        <!--  <th></th>-->
        <!--  <th></th>-->
        <!--  <th></th>-->
        <!--  <th></th>-->
        <!--  <th></th>-->
        <!--</tr>-->

         <tr>
          <td>
            <%= link_to user_path(@book.user) do %>
              <%= attachment_image_tag @book.user, :profile_image_id, :fill, 10, 10, format: 'jpg', fallback: "no-image-icon" %></br>
              <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
          <td>
            <%= link_to 'Edit', edit_book_path(@book), class: 'btn btn-success' %>
          </td>
          <td>
            <%= link_to 'Destroy', book_path(@book), method: :delete, data: {confirm: '本当に削除しますか？' }, class: 'btn btn-danger' %>
          </td>
        </tr>

      </table>
    </div>
  </div>
</div>
